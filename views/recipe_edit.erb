<h1>Edit: <%= @recipe.name %></h1>
<div class="row">
  <div class="col-md-3">
    <% if @all_categories.any? %>
      <form action="/recipes/<%= @recipe.id %>/add/category" method="post">
        <p>Select the Category(ies) for this recipe:</p>
        <input type="hidden" name="_method" value="patch">
        <ul>
          <% @all_categories.each do |category| %>
            <div class="checkbox">
              <input type="checkbox" name="category_id[]" id="<%= category.id %>" value="<%= category.id %>"><%= category.name %></input>
            </div>
          <% end %>
        </ul>
        <button id="add_categories" class="btn btn-success" type="submit" name="add_categories">Save</button>
      </form>
    <% end %>
  </div>


  <div class="col-md-3">
    <% if @all_ingredients.any? %>
      <form action="/recipes/<%= @recipe.id %>/add/ingredient" method="post">
        <p>Select the Ingredients for this Recipe:</p>
        <input type="hidden" name="_method" value="patch">
        <ul>
          <% @all_ingredients.each do |ingredient| %>
            <div class="checkbox">
              <input type="checkbox" name="ingredient_id[]" id="<%= ingredient.id %>" value="<%= ingredient.id %>"><%= ingredient.name %></input>
            </div>
          <% end %>
        </ul>
        <button id="add_ingredients" class="btn btn-success" type="submit" name="add_ingredients">Save</button>
      </form>
    <% end %>
  </div>

  <div class="col-md-3">
    <form action="/recipes/<%= @recipe.id %>/update/name" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <p>Update this recipe's name</p>
        <input id="new_recipe_name" name="new_recipe_name" type="text" autofocus>
      </div>
      <button class="btn btn-warning" type="submit" id="update_recipe" name="update_recipe">Update</button>
    </form>
  </div>

  <div class="col-md-3">
    <form action="/recipes/<%= @recipe.id %>/update/instructions" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <p>Update this recipe's instructions</p>
        <input id="new_recipe_instructions" name="new_recipe_instructions" type="text">
      </div>
      <button class="btn btn-warning" type="submit" id="update_instructions" name="update_instructions">Update</button>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <form action="/recipes/<%= @recipe.id %>/update/rating" method="post">
      <input type="hidden" name="_method" value="patch">
      <p class="text-center">Update this recipe's rating</p>
      <div class="form-group">
        <select class="form-control" id="rating" name="rating">
          <% 6.times do |i| %>
            <option id="rating" value="<%= i %>"><%= i %></option>
          <% end %>
        </select>
      </div>
      <button id="update_rating" name="update_rating" type="submit" class="btn btn-warning">Update</button>
    </form>
  </div>
</div>
<div class="form-bottom-1 col-md-4 col-md-offset-4 block-center">
  <form action="/recipes/<%= @recipe.id %>/delete" method="post">
    <div class="form-group">
      <p class="text-center">Delete this Recipe:</p>
      <input type="hidden" name="_method" value="delete">
    </div>
    <button class="btn btn-danger stretch" type="submit" id="delete_recipe" name="delete_recipe">Delete</button>
  </form>
</div>
